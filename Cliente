#include <sys/types.h>
#include <sys/stat.h>
#include <stdio.h>
#include <unistd.h>
#include <string.h>
#include <fcntl.h>



int main(int argc, char* argv[]){

	int Wfifo;
	int Wfifotipo;
	
	char tipocomando[4];
	char dadosconcretos[30];

	strcpy(tipocomando,argv[1]);
	strcat(tipocomando,"\n");
	strcpy(dadosconcretos, argv[2]);
	strcat(dadosconcretos,"\n");

	if(argc > 1){
		Wfifo = open("fifo",O_WRONLY);
		Wfifotipo = open("fifotipo",O_WRONLY);

	}
	else{
		write(0,"ERRO \n",sizeof("ERRO \n"));
		return -1;
	}


	if (Wfifo == -1 || Wfifotipo == -1) {
		write(0,"ERRO a abrir o pipe \n",sizeof("ERRO a abrir o pipe \n"));
		return -1;
	}



	
	write(Wfifotipo,tipocomando,strlen(tipocomando));

	write(Wfifo,dadosconcretos,strlen(dadosconcretos));


	close(Wfifotipo);
	close(Wfifo);
	
	return 0;

}

