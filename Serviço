#include <sys/types.h>
#include <sys/stat.h>
#include <stdio.h>
#include <unistd.h>
#include <string.h>
#include <fcntl.h>



int main(int argc, char* argv[]){

	int Wfifo;

	

	if(argc > 1){
		Wfifo = open("fifo",O_WRONLY);
	}
	else{
		write(0,"ERRO \n",sizeof("ERRO \n"));
		return -1;
	}


	if (Wfifo == -1){
		write(0,"ERRO a abrir o pipe \n",sizeof("ERRO a abrir o pipe \n"));
		return -1;
	}

	char *tipocomando = strcat(argv[1],"\n");
	//char *nome = strcat(argv[2],"\n");
	write(Wfifo,nome,strlen(tipocomando));
	printf("%s\n", tipocomando );
	//write(Wfifo,nome,strlen(nome));
	close(Wfifo);
	return 0;

}

